mixin header(headerMods)
  -
    const headerLinks = [
      {
        href: "#intro",
        text: "Главная"
      },
      {
        href: "#about",
        text: "Обо мне"
      },
      {
        href: "#skills",
        text: "Навыки"
      },
      {
        href: "#portfolio",
        text: "Портфолио"
      },
      {
        href: "#contacts",
        text: "Контакты"
      },
    ]

  header.header(class=headerMods, data-fix-block)
    .container
      nav.navigation-changer
        .navigation-changer__wrapper-toggle
          h1.titles Роман Капитонов
          button.navigation-changer__toggle(type="button", aria-label="Переключатель отображения меню", aria-pressed="false")
            span.navigation-changer__burger-line.navigation-changer__burger-line--top
            span.navigation-changer__burger-line.navigation-changer__burger-line--center
            span.navigation-changer__burger-line.navigation-changer__burger-line--bottom


        ul.navigation-changer__list
          each link in headerLinks
            li.navigation-changer__item
              a.navigation-changer__link(href=link.href, data-navigation-link) #{link.text}
