mixin skills()
  section.skills.section-navigation#skills
    .container2
      h2.titles(data-lang-key="headersSection")
      p.skills__text(data-lang-key="skillsSection")
      ul.skills__list
        li.skills__item
          +icon("icon-html5", 60, 60).skills__icon
          p.skills__name HTML
        li.skills__item
          +icon("icon-css", 60, 60).skills__icon
          p.skills__name CSS
        li.skills__item
          +icon("icon-javascript", 60, 60).skills__icon
          p.skills__name vanilla JS
        li.skills__item
          +icon("icon-webapi", 60, 60).skills__icon
          p.skills__name WEB API
        li.skills__item
          +icon("icon-node", 60, 60).skills__icon
          p.skills__name Node.js / Express
      p.skills__text(data-lang-key="skillsSection")
      ul.skills__list
        li.skills__item
          +icon("icon-pug", 60, 60).skills__icon
          p.skills__name Pug
        li.skills__item
          +icon("icon-sass", 60, 60).skills__icon
          p.skills__name SASS
        li.skills__item
          +icon("icon-gulp", 60, 60).skills__icon
          p.skills__name Gulp.js
        li.skills__item
          +icon("icon-webpack", 60, 60).skills__icon
          p.skills__name Webpack
        li.skills__item
          +icon("icon-git", 60, 60).skills__icon
          p.skills__name GIT
